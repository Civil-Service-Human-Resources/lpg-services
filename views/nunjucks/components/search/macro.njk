{% macro searchBox(params) %}
    <div class="search-box">
        <form autocomplete="off" name="searchLearning" method="get" action="/search">
            <div class="form-group search-box__group ">
                <label class="visuallyhidden" for="q">Search all available learning</label>
                <input class="form-control search-box__input" id="q" type="text" name="q" value='{{ params.query or '' }}' placeholder="Search CSL">
                <button type="submit" class="search-box__submit">Search</button>
            </div>
        </form>
    </div>
{% endmacro %}

{% macro searchHeader(params) %}
    <div class="u--space--y30 u--border--bgrey2">
        <div class="grid-row ">
            <div class="column-one-half ">
                {{ params.headerHtml | safe }}
            </div>
            <div class="column-one-half ">
                {{ searchBox(params.searchBox) }}
            </div>
        </div>
    </div>
{% endmacro %}
