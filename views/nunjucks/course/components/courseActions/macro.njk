{% macro courseActions(params) %}
    {% if params.isInLearningPlan != undefined %}
        <aside class="lpg-related-items lpg-related-items--course-actions">
            <h2 class="heading-medium">Actions</h2>
            {% if params.isInLearningPlan %}
                <a href="/courses/{{ params.courseId }}?delete={{ params.courseId }}">Remove from Learning Plan</a>
            {% else %}
                <a href="/suggestions-for-you/add/{{ params.courseId }}?ref=course">Add to Learning Plan</a>
            {% endif %}
        </aside>
    {% endif %}
{% endmacro %}
