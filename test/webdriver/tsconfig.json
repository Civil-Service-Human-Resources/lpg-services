{
	"compileOnSave": true,
	"compilerOptions": {
		"outDir": "dist",
		"alwaysStrict": true,
		"baseUrl": ".",
		"declaration": true,
		"experimentalDecorators": true,
		"module": "commonjs",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"paths": {
			"lib/*": ["src/lib/*"]
		},
		"preserveConstEnums": true,
		"pretty": true,
		"sourceMap": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"target": "ESNext",
		"typeRoots": ["./node-modules/@types"]

	},
	"include": [
		"./src/**/*",
		"node_modules/@types/jasmine/index.d.ts",
		"node_modules/@types/webdriverio/index.d.ts"
	]
}
