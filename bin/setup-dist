#! /usr/bin/env bash

root="$(dirname "$(cd "$(dirname "$0")"; pwd)")"
dist="$root/dist"

rm -rf "$dist"
mkdir -p "$dist"

cd "$dist"

ln -s ../src/locale
cp ../src/jasmine.js .

ln -s build node_modules

mkdir management-ui
mkdir management-ui/assets
mkdir ui
mkdir ui/assets
mkdir ui/assets/styles


cd "$dist/management-ui/assets"

ln -s ../../../src/management-ui/assets/img .

cd "$dist/management-ui"

ln -s ../../src/management-ui/component
ln -s ../../src/management-ui/page

cd "$dist/ui/assets"
cp ../../../src/ui/assets/styles/video-js.min.css styles

ln -s ../../../src/ui/assets/js .
ln -s ../../../src/ui/assets/img .

cd "$dist/ui"

ln -s ../../src/ui/component
ln -s ../../src/ui/page