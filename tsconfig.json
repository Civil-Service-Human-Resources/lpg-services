{
	"compileOnSave": true,
	"compilerOptions": {
		"alwaysStrict": true,
		"baseUrl": ".",
		"declaration": true,
		"experimentalDecorators": true,
		"module": "commonjs",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"outDir": "./dist/build",
		"paths": {
			"lib/*": ["src/lib/*"]
		},
		"preserveConstEnums": true,
		"pretty": true,
		"sourceMap": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"target": "ESNext"
	},
	"include": ["src/**/*"],
    "exclude": [
      "node_modules/**/*",
      "**/*.d.ts"
    ]
}
