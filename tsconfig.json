{
	"compileOnSave": true,
	"compilerOptions": {
		"alwaysStrict": true,
		"baseUrl": ".",
		"declaration": true,
		"experimentalDecorators": true,
		"module": "commonjs",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"outDir": "./dist/build",
		"paths": {
			"lib/*": ["src/lib/*"],
			"learnerRecordWorkers/*": ["src/lib/service/learnerRecordAPI/workers/*"]
		},
		"preserveConstEnums": true,
		"pretty": true,
		"sourceMap": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"target": "ESNext",
		"skipLibCheck": true
	},
	"include": ["src/**/*"]
}
